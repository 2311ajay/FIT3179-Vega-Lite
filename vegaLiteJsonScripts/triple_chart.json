{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/data/world-happiness-report-with-regions-clean.csv"
  },
  "params": [
            {
            "name": "interpolate",
            "value": "cardinal",
            "bind": {
              "name": "Display mode: ",
              "input": "select",
              "options": [
                "cardinal",
                "linear"
              ],
              "labels": [
                "Normalised",
                "Linear"
              ]
            }
          },
          {
            "name": "tension",
            "value": 0,
            "bind": {"input": "range", "min": 0, "max": 1, "step": 0.05, "name": "Normalisation degree:"}
          }],
  "hconcat": [
    {
      "vconcat": [      
        {
        "height": 450,
        "width": 800,
        "transform": [
          {"filter": {"param": "time_brush"}},
          {"filter": "datum['Regional indicator'] != 'NA'"},
          {"filter": "datum.year > 2005"}
        ],
        "layer": [
              {
              "mark": {"type": "bar", "width": 45, "color": "#ddd"},
              "encoding": {
              "x": {
                "field": "Regional indicator",
                "type": "nominal",
                "axis": null
                },
              "y": {
                "aggregate": "min",
                "field": "ll",
                "type": "quantitative",
                "title": "Average Happiness score"
                },
                "tooltip": [
                {"field": "Regional indicator", "title": "Region"},
                {
                  "aggregate": "min",
                  "field": "ll",
                  "title": "Lowest Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q1",
                  "field": "ll",
                  "title": "First quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "mean",
                  "field": "ll",
                  "title": "Average Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q3",
                  "field": "ll",
                  "title": "Third quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "max",
                  "field": "ll",
                  "title": "Highest Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
                  }
                }
              },  
              {
              "mark": {"type": "bar", "width": 35, "color": "#ccc"},
              "encoding": {
              "x": {
                "field": "Regional indicator",
                "type": "nominal",
                "axis": null
                },
              "y": {
                "aggregate": "q1",
                "field": "ll",
                "type": "quantitative",
                "title": "Average Happiness score"
                },
                "tooltip": [
                {"field": "Regional indicator", "title": "Region"},
                {
                  "aggregate": "min",
                  "field": "ll",
                  "title": "Lowest Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q1",
                  "field": "ll",
                  "title": "First quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "mean",
                  "field": "ll",
                  "title": "Average Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q3",
                  "field": "ll",
                  "title": "Third quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "max",
                  "field": "ll",
                  "title": "Highest Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
                  }
                }
              },  
              {
              "mark": {"type": "bar", "width": 20, "color": "lightsteelblue"},
              "encoding": {
              "x": {
                "field": "Regional indicator",
                "type": "nominal",
                "axis": null
                },
              "y": {
                "aggregate": "q3",
                "field": "ll",
                "type": "quantitative",
                "title": "Average Happiness score"
                },
                 "tooltip": [
                {"field": "Regional indicator", "title": "Region"},
                {
                  "aggregate": "min",
                  "field": "ll",
                  "title": "Lowest Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q1",
                  "field": "ll",
                  "title": "First quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "mean",
                  "field": "ll",
                  "title": "Average Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q3",
                  "field": "ll",
                  "title": "Third quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "max",
                  "field": "ll",
                  "title": "Highest Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
                  }
                }
              }, 
              {
              "mark": {"type": "tick", "color": "black"},
              "encoding": {
              "x": {
                "field": "Regional indicator",
                "type": "nominal",
                "axis": null
                },
              "y": {
                "aggregate": "max",
                "field": "ll",
                "type": "quantitative",
                "title": "Average Happiness score"
                },
                "tooltip": [
                {"field": "Regional indicator", "title": "Region"},
                {
                  "aggregate": "min",
                  "field": "ll",
                  "title": "Lowest Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q1",
                  "field": "ll",
                  "title": "First quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "mean",
                  "field": "ll",
                  "title": "Average Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q3",
                  "field": "ll",
                  "title": "Third quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "max",
                  "field": "ll",
                  "title": "Highest Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
                  }
                }
              }, 

              {
                "mark": {"type": "bar", "width": 25},
                "params": [
              {
                "name": "region",
                "select": {"type": "point", "fields": ["Regional indicator"]},
                "bind": "legend"
              }
            ],
            "encoding": {
              "x": {
                "field": "Regional indicator",
                "type": "nominal",
                "axis": null
              },
              "y": {
                "aggregate": "average",
                "field": "ll",
                "type": "quantitative",
                "title": "Average Happiness score"
              },
              "color": {
                "field": "Regional indicator",
                "title": "",
                "scale":{"scheme":"category10"},
                "legend": {
                  "columnPadding": 40,
                  "titlePadding": 10,
                  "title": "Filter the charts by clicking on a region",
                  "orient": "top",
                  "titleFontSize": 20,
                  "titleFont": "Source Sans Pro,sans-serif",
                  "titleLimit": 500
                }
              },
              "tooltip": [
                {"field": "Regional indicator", "title": "Region"},
                {
                  "aggregate": "min",
                  "field": "ll",
                  "title": "Lowest Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q1",
                  "field": "ll",
                  "title": "First quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "mean",
                  "field": "ll",
                  "title": "Average Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "q3",
                  "field": "ll",
                  "title": "Third quartile Happiness score",
                  "format": ".2f"
                },
                {
                  "aggregate": "max",
                  "field": "ll",
                  "title": "Highest Happiness score",
                  "format": ".2f"
                }
              ],
              "opacity": {
                "condition": {"param": "region", "value": 1},
                "value": 0.4
              }
            }
          }
        ]
      },
        {
          "height": 200,
          "width": 800,
          "transform": [
            {"filter": "datum['Regional indicator'] != 'NA'"},
            {"filter": "datum.year > 2005"}
          ],
          "params": [
            {
              "name": "time_brush",
              "select": {
                "type": "interval", "encodings": ["x"],
                "mark": {"fill":"antiquewhite", "fillOpacity": 10, "stroke":"greenyellow" }
              }
            }
          ],
          "mark": {
                "type": "area",
                "line": true,
                "interpolate": {"expr": "interpolate"},
                "tension": {"expr": "tension"}
          },
          "encoding": {
            "x": {"field": "year", "type": "nominal", "title": "Year"},
            "y": {
              "aggregate": "mean",
              "field": "ll",
              "title": "Happiness score",
              "stack": "normalize"
            },
            "color": {"field": "Regional indicator","scale":{"scheme":"category10"}},
            "tooltip": [
              {"field": "year", "title": "Year"},
              {"field": "Regional indicator", "title": "Region"},
              {
                "aggregate": "mean",
                "field": "ll",
                "title": "Happiness score",
                "format": ".2f"
              }
            ],
            "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.2
            }
          }
        }
      ]
    },
    {
      "width": 400,
      "height": 680,
      "title": "10 happiest countries and saddest countries",
      "transform": [
        {"filter": {"param": "time_brush"}},
        {"filter": "datum['Regional indicator'] != 'NA'"},
        {"filter": "datum.year > 2005"},
        {
          "aggregate": [{"op": "mean", "field": "ll", "as": "AverageScore"}],
          "groupby": ["Country", "Regional indicator"]
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "AverageScore", "order": "descending"}]
        },        {"joinaggregate": [{"op": "max", "field": "rank", "as": "total"}]},
        {"filter": "datum.rank <= 10 || datum.rank >= datum.total - 10"}
      ],
      "encoding": {
        "y": {
          "title": null,
          "field": "Country",
          "type": "nominal",
          "sort": {"field": "AverageScore", "op": "mean", "order": "descending"}
        },
        "x": {
          "field": "AverageScore",
          "type": "quantitative",
          "title": "Average Happiness score"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "AverageScore",
            "type": "quantitative",
            "format": ".2f",
            "title": "Average Happiness score"
          }
        ]
      },
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "color": {"field": "Regional indicator"},
            "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
            }
          }
        },
        {
          "mark": {"type": "text", "align": "right", "xOffset": -6},
          "encoding": {
            "y": {
              "field": "Country",
              "type": "nominal",
              "axis": null,
              "sort": {
                "field": "AverageScore",
                "op": "mean",
                "order": "descending"
              }
            },
            "x": {
              "field": "AverageScore",
              "type": "quantitative",
              "title": "Average Happiness score"
            },
            "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
            },
            "text": {"field": "Country"}
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Source Sans Pro, sans-serif",
      "labelAngle": 0,
      "labelColor": "black",
      "titleColor": "black",
      "gridColor": "lighter",
      "labelFontSize": 14,
      "labelLimit": 500
    },
    "padding": {"left": 5, "top": 5, "right": 5, "bottom": 5},
    "style": {
      "guide-title": {
        "font": "Source Sans Pro, sans-serif",
        "limit": 400,
        "fontSize": 15
      },
      "text": {
        "font": "Source Sans Pro, sans-serif",
        "fontWeight": "normal",
        "size": 14
      }
    },
    "legend": {
      "columns": 5,
      "labelLimit": 300,
      "labelFontSize": 16,
      "labelFont": "Source Sans Pro, sans-serif",
      "labelPadding": 4,
      "rowPadding": 6
    }
  }
}