{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/data/world-happiness-report-with-regions-clean.csv"
  },
  "hconcat": [
    {
      "vconcat": [
        
        {
        "transform": [
          {"filter": {"param": "time_brush"}},
          {"filter": "datum['Regional indicator'] != 'NA'"}
          ],

      "facet": {
        "column": {
          "field": "Regional indicator", "type": "ordinal",
          "header": {"labelAngle": 0, "title": "", "labelFontSize":0}
        }
      },
      "spacing": 10,
      "spec": {
        "height":350,       
        "width": 69,
        "encoding": {
          "y": {
            "type": "quantitative","axis":null,
            "scale": {"nice": true,"domain":[0,9]},
            "title": null
          },
          "opacity": {
            "condition": {"param": "region", "value": 1},
            "value": 0.4
          }
        },
        "layer": [{
          "mark": {"type": "bar", "color": "#eee"},
          "encoding": {"y": {"field": "ll", "aggregate":"q3"}}
        },{
          "mark": {"type": "bar", "color": "#ddd"},
          "encoding": {"y": {"field": "ll", "aggregate":"min"}}
        },{
          "mark": {"type": "bar", "color": "#ccc"},
          "encoding": {"y": {"field": "ll", "aggregate":"min"}}
        },{
          "mark": {"type": "bar", "color": "lightsteelblue", "size": 10},
          "encoding": {"y": {"field": "ll", "aggregate":"max"}}
        },{
          "mark": {"type": "bar", "size": 10},
          "params": [
            {
              "name": "region",
              "select": {"type": "point", "fields": ["Regional indicator"]},
              "bind": "legend"
            }
          ],
          "encoding": {"y": {"field": "ll", "aggregate":"average"},
          "color": {
                  "field": "Regional indicator",
                  "title":"",
                  "legend": {
                    "columnPadding":40,
                    "titlePadding":10,
                    "title": "Filter the charts by clicking on a region",
                    "orient": "top",
                    "titleFontSize":20,
                    "titleFont":"Source Sans Pro,sans-serif",
                    "titleLimit":500
                  }
                },
            "tooltip": [
              {"field": "Regional indicator", "title": "Region"},
              {
                "aggregate": "mean",
                "field": "ll",
                "title": "Average Happiness score",
                "format": ".2f"
              }
            ]
          }
        },{
          "mark": {"type": "tick", "color": "black"},
          "encoding": {"y": {"field": "ll", "aggregate":"max"}}
        }
        ]
      },
      "resolve": {"scale": {"y": "independent"}}
    },
        {
          "height": 300,
          "width": 800,
          "mark": "line",
          "transform": [
            {"filter": "datum['Regional indicator'] != 'NA'"},
            {"filter": "datum.year > 2005"}
          ],
          "params": [
            {
              "name": "time_brush",
              "select": {"type": "interval", "encodings": ["x"]}
            }
          ],
          "encoding": {
            "x": {"field": "year", "type": "nominal", "title": "Year"},
            "y": {
              "aggregate": "mean",
              "field": "ll",
              "title": "Happiness score"
            },
            "color": {"field": "Regional indicator"},
            "tooltip": [
              {"field": "year", "title": "Year"},
              {"field": "Regional indicator", "title": "Region"},
              {
                "aggregate": "mean",
                "field": "ll",
                "title": "Happiness score",
                "format": ".2f"
              }
            ],
            "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.2
            }
          }
        }
      ]
    },
    {
      "width": 400,
      "height": 685,
      "title": "10 happiest countries and saddest countries",
      "transform": [
        {"filter": {"param": "time_brush"}},
        {"filter": "datum['Regional indicator'] != 'NA'"},
        {"filter": "datum.year > 2005"},
        {
          "aggregate": [{"op": "mean", "field": "ll", "as": "AverageScore"}],
          "groupby": ["Country", "Regional indicator"]
        },
        {
          "window": [{"op": "rank", "as": "rank"}],
          "sort": [{"field": "AverageScore", "order": "descending"}]
        },        {"joinaggregate": [{"op": "max", "field": "rank", "as": "total"}]},
        {"filter": "datum.rank <= 10 || datum.rank >= datum.total - 10"}
      ],
      "encoding": {
        "y": {
          "title": null,
          "field": "Country",
          "type": "nominal",
          "sort": {"field": "AverageScore", "op": "mean", "order": "descending"}
        },
        "x": {
          "field": "AverageScore",
          "type": "quantitative",
          "title": "Average Happiness score"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "AverageScore",
            "type": "quantitative",
            "format": ".2f",
            "title": "Average Happiness score"
          }
        ]
      },
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "color": {"field": "Regional indicator"},
            "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
            }
          }
        },
        {
          "mark": {"type": "text", "align": "right", "xOffset": -6},
          "encoding": {
            "y": {
              "field": "Country",
              "type": "nominal",
              "axis": null,
              "sort": {
                "field": "AverageScore",
                "op": "mean",
                "order": "descending"
              }
            },
            "x": {
              "field": "AverageScore",
              "type": "quantitative",
              "title": "Average Happiness score"
            },
            "opacity": {
              "condition": {"param": "region", "value": 1},
              "value": 0.4
            },
            "text": {"field": "Country"}
          }
        }
      ]
    }
  ],
  "config": {
    "axis": {
      "labelFont": "Source Sans Pro, sans-serif",
      "labelAngle": 0,
      "labelColor": "black",
      "titleColor": "black",
      "gridColor": "lighter",
      "labelFontSize": 14,
      "labelLimit": 500
    },
    "padding": {"left": 5, "top": 5, "right": 5, "bottom": 5},
    "style": {
      "guide-title": {
        "font": "Source Sans Pro, sans-serif",
        "limit": 400,
        "fontSize": 15
      },
      "text": {
        "font": "Source Sans Pro, sans-serif",
        "fontWeight": "normal",
        "size": 14
      }
    },
    "legend": {
      "columns": 5,
      "labelLimit": 300,
      "labelFontSize": 16,
      "labelFont": "Source Sans Pro, sans-serif",
      "labelPadding": 4,
      "rowPadding": 6
    }
  }
}