{
  "title": "Happiness Score against Freedom to make life choices",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "width": 650,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/data/world-happiness-report-2021-raw.csv"
  },
  "layer": [
    {
      "transform": [{"filter": "datum['Freedom to make life choices'] > 0"}],
      "mark": "circle",
      "params": [{
        "name": "region",
        "select": {"type": "point", "fields": ["Regional indicator"]},
        "bind": "legend"
      }],
      "encoding": {
        "x": {
          "field": "Freedom to make life choices",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Freedom to make life choices"
        },
        "y": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Happiness score"
        },
        "size":{
          "field":"Perceptions of corruption","type":"quantitative","title":"Perceptions of corruption"
        },
        "color": {
          "field": "Regional indicator",
          "type": "nominal",
          "title":"Region"
        },
        "opacity": {
      "condition": {"param": "region", "value": 1},
      "value": 0.1
    }
    ,
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {
            "field": "Regional indicator",
            "type": "nominal",
            "title": "Region"
          },
          {"field": "Freedom to make life choices", "type": "quantitative", "title":"Freedom to make life choices"},
          {"field":"Perceptions of corruption","type":"quantitative","title":"Perceptions of corruption"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "firebrick"},
      "transform": [
        {"regression": "Freedom to make life choices", "on": "Ladder score"}
      ],
      "encoding": {
        "x": {"field": "Freedom to make life choices", "type": "quantitative"},
        "y": {"field": "Ladder score", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Malaysia",
              "South Korea",
              "Lebanon",
              "Taiwan",
              "Haiti",
              "India",
              "Afghanistan",
              "Finland"        
          ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "dx": 15,
        "dy": -15
      },
      "encoding": {
        "y": {
          "field": "Ladder score",
          "type": "quantitative"
        },
        "x": {
          "field": "Freedom to make life choices",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "region",
            "value": 1
          },
          "value": 0.1
        }
      }
    },
    {
      "transform": [
        {
          "filter":"datum.Country == 'Luxembourg'"
        },
        {
          "calculate": "'All Western European countries lb have high level of freedom'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":100,
        "dy":-280
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"#f56991"},
        "size": {
          "value": 15
        }
      }
    }
  ],
  "config": {
    "axis": {
      "labelColor": "black",
      "titleColor": "black",
      "gridColor": "lighter"
    },
"autosize":{"type":"pad"},
"lineBreak":"lb",
"title":{"fontSize":15,"padding":{"left": 5, "top": 5, "right": 5, "bottom": 5}},
"padding":{"left": 5, "top": 5, "right": 5, "bottom": 5},
"style": {
  "guide-title": {
    "font": "Source Sans Pro, sans-serif",
    "fontSize":15
  },
  "text": {
    "font": "Source Sans Pro, sans-serif",
    "fontWeight": "normal",
    "size": 14
  }
},
"legend": {
  "columns":1,
  "labelLimit":300
}
}
}