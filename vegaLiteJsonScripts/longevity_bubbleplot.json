{
  "title": "Happiness Score against Healthy life expectancy",
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A scatterplot showing body mass and flipper lengths of penguins.",
  "width": 650,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/2311ajay/FIT3179-Vega-Lite/main/data/world-happiness-report-2021-raw.csv"
  },
  "layer": [
    {
      "transform": [{"filter": "datum['Healthy life expectancy'] > 0"}],
      "mark": "circle",
      "params": [{
        "name": "region",
        "select": {"type": "point", "fields": ["Regional indicator"]},
        "bind": "legend"
      }],
      "encoding": {
        "x": {
          "field": "Healthy life expectancy",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Healthy life expectancy"
        },
        "y": {
          "field": "Ladder score",
          "type": "quantitative",
          "scale": {"zero": false},
          "title": "Happiness score"
        },
        "size":{
          "field":"Density","type":"quantitative","title":"Density per sq km"
        },
        "color": {
          "scale": {"scheme": "category10"},
          "field": "Regional indicator",
          "type": "nominal",
          "title":"Region"
        },
        "opacity": {
      "condition": {"param": "region", "value": 1},
      "value": 0.1
    }
    ,
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},          {
            "field": "Regional indicator",
            "type": "nominal",
            "title": "Region"
          },
          {"field": "Healthy life expectancy", "type": "quantitative", "title":"Healthy life expectancy"},
          {"field":"Density","type":"quantitative","title":"Density (per sq km)"}
        ]
      }
    },
    {
      "mark": {"type": "line", "color": "firebrick"},
      "transform": [
        {"regression": "Healthy life expectancy", "on": "Ladder score"}
      ],
      "encoding": {
        "x": {"field": "Healthy life expectancy", "type": "quantitative"},
        "y": {"field": "Ladder score", "type": "quantitative"}
      }
    },
        {
      "transform": [
        {
          "filter": {
            "field": "Country",
            "oneOf": [
              "Japan",
              "Burundi",
              "Taiwan",
              "Haiti",
              "India",
              "South Korea",
              "Nigeria",
              "Switzerland",
              "China",
              "Philippines",
              "Mauritius"        
          ]
          }
        }
      ],
      "mark": {
        "type": "text",
        "dy": 15
      },
      "encoding": {
        "y": {
          "field": "Ladder score",
          "type": "quantitative"
        },
        "x": {
          "field": "Healthy life expectancy",
          "type": "quantitative"
        },
        "text": {
          "field": "Country",
          "type": "nominal"
        },
        "color": {
          "value": "black"
        },
        "opacity": {
          "condition": {
            "param": "region",
            "value": 1
          },
          "value": 0.1
        }
      }
    },
    {
      "transform": [
        {
          "filter":"datum.Country == 'Luxembourg'"
        },
        {
          "calculate": "'Most Sub-Saharan African countries  lb have short life expectancy'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":-150,
        "dy":-50
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"#964B00"},
        "size":{"value":15}
      }
    },
    {
      "transform": [
        {
          "filter":"datum.Country == 'Luxembourg'"
        },
        {
          "calculate": "'Most Western European countries  lb have a longer life expectancy'",
          "as": "text_annotation"
        }
      ],
      "mark": {
        "type": "text",
        "fontWeight":"bold",
        "dx":10,
        "dy":-250
      },
      "encoding": {
        "text": {
          "field": "text_annotation"
        },
        "color":{"value":"#964B00"},
        "size":{"value":15}
      }
    }
  ],
  "config": {
    "axis": {
      "labelColor": "black",
      "titleColor": "black",
      "gridColor": "lighter"    },
"autosize":{"type":"pad"},
"lineBreak":"lb",
"title":{"fontSize":15,"padding":{"left": 5, "top": 5, "right": 5, "bottom": 5}},
"padding":{"left": 5, "top": 5, "right": 5, "bottom": 5},
"style": {
  "guide-title": {
    "font": "Source Sans Pro, sans-serif",
    "fontSize":15
  },
  "text": {
    "font": "Source Sans Pro, sans-serif",
    "fontWeight": "normal",
    "size": 14
  }
},
"legend": {
  "columns":1,
  "labelLimit":300
}
}
}